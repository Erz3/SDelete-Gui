<controls:MetroWindow x:Class="SDelete_Gui.MainWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      Title="SDelete Gui" Height="130" Width="300"
                      ResizeMode="NoResize"
                      EnableDWMDropShadow="True"
                      WindowTransitionsEnabled="True"
                      DataContext="{Binding Main, Source={StaticResource Locator}}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="284"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="{Binding ErrorMessage}" Margin="10,10,12,0" VerticalAlignment="Top" Height="23" Grid.ColumnSpan="2"/>
        <Button Command="{Binding ConfigureCommand}"  Content="Configure" Margin="10,33,139,15" />
        <Button Command="{Binding UnConfigureCommand}" Content="UnConfigure" Margin="150,33,2,15"/>
    </Grid>
</controls:MetroWindow>
